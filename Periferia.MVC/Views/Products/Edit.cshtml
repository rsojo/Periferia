@model Periferia.MVC.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msg = ViewData["Message"];
}

<div class="d-flex justify-content-center">

    <h1>Editar</h1>
</div>

<div class="d-flex justify-content-center">
    <h4>Producto</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-12 d-flex justify-content-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="UnitValue" class="control-label"></label>
                <input asp-for="UnitValue" type="number" class="form-control" />
                <span asp-validation-for="UnitValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a id="GoBAck" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @if (@msg != null)
    {
        <script type="text/javascript">
            $.confirm({
                title: 'Confirmación',
                content: 'Guardado Completo',
                buttons: {
                    Ok: function () {
                        document.getElementById("GoBAck").click();
                    }
                }
            });
        </script>
    }
}
